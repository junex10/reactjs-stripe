{
  "name": "backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "run-p -l type-check:watch start:dev",
    "start:dev": "nodemon --exec babel-node --extensions \".ts\" ./app.ts",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "clean": "rimraf dist",
    "build:prod": "npm run clean && babel ./ -d dist --ignore=\".spec.ts\" --ignore node_modules,tsconfig.json,tslint.json --extensions \".ts\" --copy-files --no-copy-ignored",
    "build": "run-p -l type-check build:prod"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "create-file": "^1.0.1",
    "debug": "~2.6.9",
    "ejs": "~2.6.1",
    "express": "~4.16.1",
    "express-validator": "^6.12.1",
    "fs": "0.0.1-security",
    "http-errors": "~1.6.3",
    "json-sql": "^0.5.0",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.1",
    "mongoose": "^6.0.5",
    "morgan": "~1.9.1",
    "nodemailer": "^6.6.3",
    "nodemon": "^2.0.12",
    "stripe": "^8.181.0",
    "swagger-ui-express": "^4.1.6",
    "ts-node": "^10.2.1",
    "uuid": "^8.3.2",
    "validator": "^13.6.0"
  },
  "devDependencies": {
    "@babel/runtime": "^7.15.4",
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.15.5",
    "@babel/node": "^7.15.4",
    "@babel/plugin-transform-runtime": "^7.15.0",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-typescript": "^7.15.0",
    "babel-loader": "^8.2.1",
    "clean-webpack-plugin": "^3.0.0",
    "html-webpack-plugin": "^5.3.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-loader": "^9.2.6",
    "tslint": "^6.1.3",
    "typescript": "^4.4.3",
    "webpack": "^5.4.0",
    "webpack-cli": "^4.2.0",
    "webpack-dev-server": "^3.11.0"
  }
}
